extends ../auth.layout.pug

block content
    .wrapper
        include ../common/header.pug
        .content
            .panel__phones
                a.panel__return(href='/vendor-registration-step-1.html')
                    +icon('arrow','panel__arrow')
                    span Вернуться назад
                .panel__header-title
                    span Войти в личный кабинет
                .panel__content.signin__content
                    form#form.panel__form.form
                        .panel__input-row
                            input.form__input.panel__input(placeholder='Телефон' type='tel')
                            label.form__password
                                input#password.form__input.panel__input.panel__input_sms(placeholder='Пароль' type='password')
                                span#eye.form__password-icon
                        .panel__input-row.panel__input-row_space
                            label.form__label(for='checkbox')
                                input#checkbox.form__checkbox(type='checkbox' name='human')
                                span.form__checkbox-icon
                                    svg.form__checkbox-svg
