extends ../auth.layout.pug

block content
    .wrapper
        .about
            include ../common/header.pug
            .about__container
                .about__text
                    .about__title
                        span О проекте
                    .about__desc
                        p UniPark – Первый казахстанский продукт, созданный транспортной компанией с 14-летним опытом в сфере логистики.
                    .about__link
                        a.about__btn(href='/index.html')
                            span Смотреть каталог
            .booking.booking__container.container
                .booking__card
                    .booking__text
                        .booking__title
                            span Хотите забранировать авто?
                        .booking__desc
                            span Заполните пожалуйста все поля и мы доставим вам авто или технику вовремя
                    form.booking__form.form
                        .booking__car-type
                            include ../common/checkbox.pug
                        ul.booking__input-group
                            li.booking__input-row.booking__input-row_type
                                select.booking__select-type
                                    option(value='' disabled selected hidden) Тип авто
                                    option(value='1') Авто
                                    option(value='2') Микроавтобусы
                                    option(value='3') Автобусы
                                    option(value='4') Грузовые
                                    option(value='5') Техника
                            li.booking__input-row.booking__input-row_text
                                input.booking__input(placeholder='Введите ваше имя' type='text')
                            li.booking__input-row.booking__input-row_text
                                input.booking__input(placeholder='Телефон' type='text')
                            li.booking__input-row
                                select.booking__select
                                    option(value='' disabled selected hidden) Марка авто
                                    option(value='1') Mercedes
                                    option(value='2') BMW
                            li.booking__input-row
                                label.booking__datepicker
                                    input.booking__input-datepicker(type='text' id="datepicker" placeholder='Выберите дату')
                                    span.booking__datepicker-icon
                            li.booking__input-row
                                .booking__link
                                    a.booking__btn(href='/index.html')
                                        span Оставить заявку
            .how-it-works
                .how-it-works__container.container
                    .how-it-works__title
                        span Как работает сервис UniPark
                    .how-it-works__slider
