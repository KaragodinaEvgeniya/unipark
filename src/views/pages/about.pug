                            button(id='supplier').how-it-works__link.slider-button
                                span ВЫ ПОСТАВЩИК
                        .how-it-works__swiper.swiper-container
                            .how-it-works__slider-wrapper.swiper-wrapper
                                .how-it-works__slide
                                    .how-it-works__slides
                                        .how-it-works__slide-wrapper
                                            .how-it-works__slide-icon
                                                +icon('slider-search','how-it-works__slide-img')
                                            .how-it-works__slide-title
                                                span Поиск
                                            .how-it-works__slide-desc
                                                span Найдите подходящий для Вас транспорт
                                        .how-it-works__slide-wrapper
                                            .how-it-works__slide-icon
                                                +icon('slider-wallet','how-it-works__slide-img')
                                            .how-it-works__slide-title
